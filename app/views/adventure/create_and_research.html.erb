<div class="adventure row pt-3">
  <div class="create">
    <span class="pt-5 create-part-title">CrÃ©er une aventure !</span>
    <%= form_for(@session, url: '/adventure', html: { method: :post, class: 'col-md-12 create-form' }) do |f| %>
    <div class="form-group row justify-content-center">
      <label for="game_session_title" class="control-label text-md-right form-label"></label><br />
      <div class="col-md-6 pl-0 pr-0">
        <%= f.text_field :title, class: "form-control", id:"input_title", placeholder: "Donne un nom a ta session", autocomplete: "titre" %>
      </div>
    </div>
    <div class="form-group has-feedback row justify-content-center">
      <label for="game_session_description" class="control-label text-md-right form-label"></label><br/>
      <div class="col-md-6 pl-0 pr-0">
        <%= f.text_area :description, class: "form-control", id:"input_game_description", placeholder: "Entre ta description", autocomplete: "description" %>
      </div>
    </div>
    <div class="form-group row justify-content-center">
      <select class="form-control col-md-6">
        <%roleNumber = 1%>
        <%@roleplay.each do |role|%>
        <%if roleNumber == 1%>
          <option selected="selected"><%=role.name%></option>
          <%roleNumber += 1%>
        <%else%>
          <option><%=role.name%></option>
          <%roleNumber += 1%>
        <%end%>
        <%end%>
      </select>
    </div>
    <div class="form-group row justify-content-center">
      <select class="form-control col-md-6">
        <%joueur = 1%>
        <%while joueur <= 10%>
          <%if joueur == 1%>
            <option>Pour <%=joueur%> aventurier</option>
            <%joueur += 1%>
          <%else%>
            <option>Pour <%=joueur%> aventuriers</option>
            <%joueur += 1%>
          <%end%>
        <%end%>
      </select>
    </div>
    <div class="row justify-content-center">
      <button class="btn btn-group btn-default btn-animated pl-5 gobtn">Lancer !</button>
    </div>
    <%end%>
  </div>
  <div class="search">
    <span class="pt-5 search-part-title">Chercher une aventure !</span>
    <div class="searchbar">
      <div class="form-group">
        <label></label>
        <input type="text" class="form-control" placeholder="Quel est le nom de la partie souhaitÃ©e ?">
      </div>
    </div>
    <div class="search_result">
      <%compter = 1%>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>Titre</th>
            <th>Game master</th>
          </tr>
        </thead>
        <tbody>
          <%while compter <= 14%>
          <tr>
            <td><%=compter%></td>
            <td></td>
            <td></td>
          </tr>
          <%compter += 1%>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>
