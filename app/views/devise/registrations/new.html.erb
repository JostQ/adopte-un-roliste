<div class="formbackground pt-5">
  <div class="scrollToTop circle"><i class="fa fa-angle-up"></i></div>
  <div class="page-wrapper">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-auto">
          <div class="hc-element-invisible" data-animation-effect="fadeInDownSmall" data-effect-delay="100">
            <div class="form-block p-30 light-gray-bg border-clear">
              <h2 class="title">Deviens un Roliste</h2>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>

              <form class="form-horizontal">
                <div class="form-group has-feedback row">
                  <%= f.label :pseudo, class:"col-md-3 control-label text-md-right col-form-label" %><span class="text-danger small">*</span><br />
                  <div class="col-md-8">
                    <%= f.text_field :pseudo, class:"form-control", id: "inputUserName", placeholder: "Pseudo", autofocus: true, autocomplete: "pseudo" %>
                  </div>
                </div>

                <div class="form-group has-feedback row">
                  <%= f.label :email, class:"col-md-3 control-label text-md-right col-form-label" %><span class="text-danger small">*</span><br />
                  <div class="col-md-8">
                    <%= f.email_field :email, class: "form-control", id: "inputEmail", placeholder: "Email", autofocus: true, autocomplete: "email" %>
                  </div>
                </div>

                <div class="form-group has-feedback row">
                  <%= f.label :password, class:"col-md-3 control-label text-md-right col-form-label" %><span class="text-danger small">*</span><br />
                  <div class="col-md-8">
                    <%= f.password_field :password, class: "form-control", id: "inputPassword", placeholder: "Mot de Passe", autocomplete: "new-password" %>
                  </div>
                </div>

                <div class="form-group has-feedback row">
                  <%= f.label :password_confirmation, class:"col-md-3 control-label text-md-right col-form-label" %><span class="text-danger small">*</span><br />
                  <div class="col-md-8">
                    <%= f.password_field :password_confirmation, class: "form-control", id: "inputPassword", placeholder: "Confirme ton mot de passe", autocomplete: "new-password" %>
                  </div>
                </div>

                <div class="form-group row">
                  <div class="ml-md-auto col-md-9">
                    <%= f.submit "S'inscrire", class: "btn btn-group btn-default btn-animated" %>
                  </div>
                </div>
                <% end %>

                <%= render "devise/shared/links" %>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
