


<div class="formbackground pt-5">
  <div class="scrollToTop circle"><i class="fa fa-angle-up"></i></div>
  <div class="page-wrapper">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-auto">
          <div class="hc-element-invisible" data-animation-effect="fadeInDownSmall" data-effect-delay="100">
            <div class="form-block p-30 light-gray-bg border-clear">
              <h2 class="title">Connecte-toi</h2>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <form class="form-horizontal">
                <div class="form-group has-feedback row">
                  <label for="user_email" class="col-md-3 control-label text-md-right col-form-label">Email</label><br />
                  <div class="col-md-8">
                    <%= f.email_field :email, class: "form-control", id: "inputEmail", placeholder: "Email", autofocus: true, autocomplete: "email" %>
                  </div>
                </div>
                <div class="form-group has-feedback row">
                  <label for="user_password" class="col-md-3 control-label text-md-right col-form-label">Mot de passe</label><br />
                  <div class="col-md-8">
                    <%= f.password_field :password, class: "form-control", id: "inputPassword", placeholder: "Mot de Passe", autocomplete: "new-password" %>
                  </div>
                </div>

                <% if devise_mapping.rememberable? -%>
                <div class="checkbox form-check">
                  <input class="form-check-input" type="checkbox" required>
                  <label class="form-check-label">
                    Se souvenir de moi.
                  </label>
                </div>
                <% end -%>

                <div class="form-group row">
                  <div class="ml-md-auto col-md-9">
                    <%= f.submit "Se connecter", class: "btn btn-group btn-default btn-animated" %>
                  </div>
                </div>
              </form>
              <p class="text-center">Tu n'as pas de compte ? <a href="/users/sign_up">Inscris-toi</a></p>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
