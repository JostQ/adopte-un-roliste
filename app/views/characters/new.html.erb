<div class="characterbackground pt-5">
  <div class="scrollToTop circle"><i class="fa fa-angle-up"></i></div>
  <div class="page-wrapper">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-auto">
          <div class="hc-element-invisible" data-animation-effect="fadeInDownSmall" data-effect-delay="100">
            <div class="form-block p-30 light-gray-bg border-clear">
              <h2 class="title">Creation de ton personnage</h2>
              <%= form_for @character, url: characters_path  do |f| %>
              <form class="form-horizontal">
                <div class="form-group has-feedback row">
                  <label for="user_pseudo" class="col-md-3 control-label text-md-right col-form-label">Nom</label><span class="text-danger small">*</span><br />
                  <div class="col-md-8">
                    <%= f.text_field :pseudo, class:"form-control", id: "inputUserName", placeholder: "Nom du personnage", autofocus: true, autocomplete: "pseudo" %>
                  </div>
                </div>

                <div class="form-group has-feedback row">
                  <label for="user_pseudo" class="col-md-3 control-label text-md-right col-form-label">Niveau</label><span class="text-danger small">*</span><br />
                  <div class="col-md-8">
                    <%= f.text_field :level, class:"form-control", id: "inputUserLevel", placeholder: "Niveau du personnage", autofocus: true, autocomplete: "level" %>
                  </div>
                </div>

                <div class="form-group has-feedback row">
                  <label for="user_pseudo" class="col-md-3 control-label text-md-right col-form-label">Jeux de Rôle</label><span class="text-danger small">*</span><br />
                  <div class="col-md-8">
                    <select name="character[roleplay]">
                      <% @roleplays.each do |roleplay| %>
                        <option value="<%= roleplay.id %>"><%= roleplay.name %></option>
                      <% end %>
                    </select>
                  </div>
                </div>

                <div class="form-group has-feedback row">
                  <label for="user_email" class="col-md-3 control-label text-md-right col-form-label">Histoire</label><span class="text-danger small">*</span><br />
                  <div class="col-md-8">
                    <%= f.text_area :description, class: "form-control", id: "inputDescription", placeholder: "Retranscrit l'histoire de ton personnage", autofocus: true, autocomplete: "description" %>
                  </div>
                </div>

                <button id="additional-primary-stat" class="btn btn-info mt-3" type="button" name="statp">+</button> Ajouter une caractéristique principale (ex: santé...)

                <div id="input-primary-stat">

                </div>

                <button id="additional-secondary-stat" class="btn btn-info mt-3" type="button" name="statsec">+</button> Ajouter une caractéristique secondaire (ex: force, intelligence...)

                <div id="input-secondary-stat">

                </div>

                <button id="additional-item" class="btn btn-info mt-3" type="button" name="inventory">+</button> Ajouter un item à votre inventaire

                <div id="input-item">

                </div>



                <div class="form-group row">
                  <div class="ml-md-auto col-md-9">
                    <%= f.submit "Creer", class: "btn btn-group btn-default btn-animated" %>
                  </div>
                </div>
              </form>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
