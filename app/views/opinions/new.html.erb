<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 border shadow p-3">
      <form action="/opinions" method="post">
        <input type="hidden" name="game_session" value="<%= @params[:game_session] %>">
        <input type="hidden" name="MJ" value="<%= @params[:MJ] %>">
        <input type="hidden" name="sender" value="<%= @params[:sender] %>">
        <div class="form-group">
          <label for="opinion_text">Votre opinion</label>
          <textarea name="opinion_text" rows="3" class="form-control" id="opinion_text" placeholder="Ecrivez votre opinion"></textarea>
        </div>
        <button class="btn btn-dark col-12">Envoyer</button>
      </form>
    </div>
  </div>
</div>
